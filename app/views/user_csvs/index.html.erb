<nav aria-label="breadcrumb">
  <ol class="breadcrumb mt-3">
    <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">CSVs</li>
  </ol>
</nav>

<div class="row">
	<div class="col-12">
		<% if current_user.csvs.any? %>
      <table class="table table-striped user-csvs">
			  <thead>
			    <tr>
			      <th scope="col">#</th>
			      <th scope="col">Uploaded</th>
			      <th scope="col">Filename</th>
			      <th scope="col">&nbsp;</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% current_user.csvs.each_with_index do |csv, i| %>
            <tr class="csv-row">
              <th scope="row"><%= i + 1 %></th>
              <td><%= csv.updated_at %></td>
              <td><%= csv.original_filename %></td>
              <td class="text-right">
                <%= link_to "View", user_csv_path(csv), class: "btn btn-sm btn-info view-csv" %>
                <%= link_to "Delete", user_csv_path(csv), method: :delete, class: "btn btn-sm btn-danger delete-csv" %>
              </td>
            </tr>
          <% end %>
			  </tbody>
			</table>

		<% else %>
      <div class="col-12">
        <h5 class="card-title">You dont have any uploaded CSVs yet</h5>
        <p class="card-text">To add a new CSV file, use the button above</p>
      </div>
		<% end %>
	</div>
</div>
