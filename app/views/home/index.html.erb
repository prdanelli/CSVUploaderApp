<div class="row">
	<div class="col-12">
		<div class="d-flex align-items-center vh-100">
			<div class="d-flex justify-content-center flex-grow-1">
				<div class="col-lg-6 col-sm-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Welcome</h5>
              <% if current_user.present? %>
                <p class="card-text">You are currently logged in</p>
                <%= link_to "Account", user_csvs_path, class: "btn btn-dark btn-register" %>
                <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-danger btn-login" %>

              <% else %>
                <p class="card-text">Login to your account below</p>
                <%= link_to "Login", login_path, class: "btn btn-info btn-login" %>
                <%= link_to "Register", register_path, class: "btn btn-warning btn-register" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
