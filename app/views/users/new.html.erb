<div class="container">
		<%= form_with model: @user, path: register_path, local: true, method: :post, class: "row" do |f| %>
			<div class="col-12 mb-3">
					<%= f.label :email %>
	      	<%= f.text_field :email, class: "form-control #{ 'is-invalid' if f.errors?(:email) }" %>
	      	<%= f.errors_for :email %>
	    </div>

			<div class="col-12 mb-3">
	      	<%= f.label :password %>
	  			<%= f.password_field :password, class: "form-control #{ 'is-invalid' if f.errors?(:password) }" %>
	      	<%= f.errors_for :password %>
	    </div>

			<div class="col-12">
				<%= f.submit :register, class: "btn btn-primary" %>
			</div>
		<% end %>
</div>
