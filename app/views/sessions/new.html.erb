<div class="row">
  <div class="col-12">
    <div class="d-flex align-items-center vh-100">
      <div class="d-flex justify-content-center flex-grow-1">
        <div class="col-lg-6 col-sm-12">
          <div class="card">
            <div class="card-header">Login</div>
            <div class="card-body">
              <p class="card-text">Or <%= link_to "register an account", register_path %></p>

              <%= form_with url: login_path, local: true, method: :post, class: "row", id: "login-form" do |f| %>
                <div class="col-12 mb-3">
                    <%= f.label :email %>
                    <%= f.text_field :email, class: "form-control #{ 'is-invalid' if f.errors?(:email) }" %>
                    <%= f.errors_for :email %>
                </div>

                <div class="col-12 mb-3">
                    <%= f.label :password %>
                    <%= f.password_field :password, class: "form-control #{ 'is-invalid' if f.errors?(:password) }" %>
                    <%= f.errors_for :password %>
                </div>

                <div class="col-12">
                  <%= f.submit "Login", class: "btn btn-danger" %>
                  <%= link_to "Cancel", root_path, class: "btn btn-info" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
