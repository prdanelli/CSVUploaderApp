<nav aria-label="breadcrumb">
  <ol class="breadcrumb mt-3">
    <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">CSVs</li>
  </ol>
</nav>

<div class="row">
	<div class="col-12">
		<% if current_user.csvs.any? %>
      <table class="table table-striped">
			  <thead>
			    <tr>
			      <th scope="col">#</th>
			      <th scope="col">Uploaded</th>
			      <th scope="col">Filename</th>
			      <th scope="col">&nbsp;</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% current_user.csvs.each_with_index do |csv, i| %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= csv.updated_at %></td>
              <td><%= csv.csv.file.filename %></td>
              <td>
                <%= link_to "View", user_csv_path(csv), class: "btn btn-sm btn-info" %>
              </td>
            </tr>
          <% end %>
			  </tbody>
			</table>
		<% else %>
			<div class="d-flex align-items-center vh-100">
				<div class="d-flex justify-content-center flex-grow-1">
					<div class="col-lg-6 col-sm-12">
						<div class="card">
							<div class="card-body">
                <h5 class="card-title">You've not uploaded a CSV yet</h5>
                <p class="card-text">To add a new CSV file, use the form below</p>

                <%= render "user_csvs/partials/form" %>
              </div>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
